<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view_navigate_destination_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/destination_name"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/view_navigate_exit_on_arrive_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit_on_arrived"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/view_navigate_execute_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="@string/execute"/>

    <TextView
        android:id="@+id/logView"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:text="TextView" />


</LinearLayout>